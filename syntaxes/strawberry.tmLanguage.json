{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "strawberry",
	"patterns": [
		{
			"include": "#number"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#class"
		},
		{
			"include":"#identifier"
		},
		
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
		
	],
	"repository": {
		"keywords": {
			"patterns": [{
			  "match": "\\b(function|fun|fn|null|inherits|let|new|public|private|from|import|if|then|else|while|return|for)\\b",
			  "name": "keyword.strawberry"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.strawberry",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.strawberry",
					"match": "\\\\."
				}
			]
		},
		"number": {
			"match": "\\b([1-9][0-9]*|0)\\b",
			"name": "constant.numeric.strawberry"
		},
		"comments": {
			"patterns": [
				{
					"begin": "/\\*\\*(?!/)",
					
					"end": "\\*/",
					"name": "comment.block.documentation.strawberry"
				},
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.strawberry"
				},
				{
					"match": "(//).*$\\n?",
					"name": "comment.line.double-slash.strawberry"
				}
			]
		},
		"class": {
			"patterns":[
				{
					"match": "class",
					"name":  "storage.type.strawberry"
				},
				{
					"match": "[A-Z][A-Za-z0-9_]*",
					"name":  "entity.name.type.class.strawberry"
				}
			]
		},
		"identifier":{
			"patterns": [
				{
					"match": "[a-z][A-Za-z0-9_]*",
					"name":  "variable.strawberry"
				}
			]
		}

		
	},
	"scopeName": "source.st"
}